{
  "name": "chicago-elections-archive",
  "version": "0.1.0",
  "author": "Pat Sier",
  "license": "MIT",
  "description": "Maps and data for Chicago elections",
  "scripts": {
    "format": "prettier --write **/*.{js,css} !dist",
    "start": "NODE_ENV=development run-p -l start:*",
    "start:eleventy": "eleventy --serve",
    "start:rollup": "rollup --config rollup.config.js -w",
    "start:postcss": "postcss ./src/css -d ./site/_includes -w",
    "build": "NODE_ENV=production run-s -l build:*",
    "build:clean": "rm -rf dist",
    "build:rollup": "rollup --config rollup.config.js",
    "build:postcss": "postcss ./src/css -d ./site/_includes",
    "build:webpack": "webpack --config webpack.config.js",
    "build:eleventy": "eleventy",
    "deploy": "echo 'NOT IMPLEMENTED'",
    "lint": "eslint ./src/js/**/*.js",
    "style": "prettier --check src/**/**.{js,css}",
    "analyze": "source-map-explorer dist/**/*.js dist/**/*.js.map"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-img": "^2.0.0",
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@quasibit/eleventy-plugin-sitemap": "^2.1.5",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.4",
    "babel-preset-solid": "^1.4.0",
    "core-js": "^3.23.1",
    "cssnano": "^5.1.12",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-solid": "^0.7.0",
    "esm": "^3.2.25",
    "file-loader": "^6.0.0",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "markdown-it": "^13.0.1",
    "markdown-it-link-attributes": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "rollup": "^2.79.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-external-globals": "^0.6.1",
    "rollup-plugin-terser": "^7.0.0",
    "source-map-explorer": "^2.5.2",
    "tailwindcss": "^1.9.6",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "classlist-polyfill": "^1.2.0",
    "d3-dsv": "^3.0.1",
    "date-input-polyfill": "^2.14.0",
    "formdata-polyfill": "^4.0.10",
    "maplibre-gl": "^2.1.7",
    "pym.js": "^1.3.2",
    "solid-js": "^1.4.1",
    "url-search-params-polyfill": "^8.1.0",
    "whatwg-fetch": "^3.6.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:solid/recommended"
    ],
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "import",
      "solid"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "@babel/preset-env",
          "babel-preset-solid"
        ]
      }
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
